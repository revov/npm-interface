{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": ["es6", "dom"],
        "outDir": "out"
    },
    "angularCompilerOptions": {
        "genDir": ".",
        "debug": false
    },
    "exclude": [
        "src/main.ts"
    ]
}